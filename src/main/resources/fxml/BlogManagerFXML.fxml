<?xml version="1.0" encoding="UTF-8"?>

<?import com.browniebytes.javafx.control.DateTimePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPane" prefHeight="720.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chenum.controller.BlogManagerFXMLController">
    <children>
        <MenuBar fx:id="menuBar" layoutY="-7.0" prefHeight="25.0" prefWidth="900.0">
            <menus>
                <Menu mnemonicParsing="false" text="文章">
                    <items>
                        <RadioMenuItem fx:id="newArticleMenuItem" mnemonicParsing="false" text="撰写文章"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="窗口">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#showMainStage" text="显示主窗口"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <SplitPane fx:id="splitPane" dividerPositions="0.5" layoutY="17.0" prefHeight="683.0" prefWidth="900.0">
            <items>
                <AnchorPane fx:id="leftPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            minHeight="0.0" minWidth="0.0" prefHeight="680.66" prefWidth="200.0">
                    <children>
                        <ListView fx:id="blogListView" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" prefHeight="680.0"
                                  prefWidth="200.0">
                            <cursor>
                                <Cursor fx:constant="DEFAULT"/>
                            </cursor>
                        </ListView>
                    </children>
                    <cursor>
                        <Cursor fx:constant="DEFAULT"/>
                    </cursor>
                </AnchorPane>
                <AnchorPane fx:id="centerPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            minHeight="0.0" minWidth="0.0" prefHeight="0.0" prefWidth="0.0">
                    <children>
                        <SplitPane fx:id="centerPaneSplitPane" dividerPositions="0.5" maxHeight="1.7976931348623157E308"
                                   maxWidth="1.7976931348623157E308" minHeight="680.0" minWidth="446.0"
                                   orientation="VERTICAL" prefHeight="680.0" prefWidth="446.0">
                            <items>
                                <StackPane fx:id="centerStackPaneTop" prefHeight="150.0" prefWidth="200.0">
                                    <children>
                                        <TextArea fx:id="textArea" maxHeight="1.7976931348623157E308"
                                                  maxWidth="1.7976931348623157E308" prefHeight="340.0"
                                                  prefWidth="446.0"/>
                                    </children>
                                </StackPane>
                                <StackPane fx:id="centerStackPaneBottom" maxHeight="1.7976931348623157E308"
                                           maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0"
                                           prefHeight="220.0" prefWidth="200.0">
                                    <children>
                                        <VBox fx:id="centerStackPaneBottomVbox" fillWidth="false"
                                              maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                              prefHeight="200.0" prefWidth="446.0">
                                            <children>
                                                <HBox prefHeight="37.0" prefWidth="435.0">
                                                    <children>
                                                        <Label prefHeight="30.0" prefWidth="51.0" text="标题："/>
                                                        <TextField fx:id="title" prefHeight="37.0" prefWidth="383.0"/>
                                                    </children>
                                                </HBox>
                                                <HBox fx:id="authorBox" prefHeight="38.0" prefWidth="427.0">
                                                    <children>
                                                        <Label prefHeight="38.0" prefWidth="51.0" text="作者："/>
                                                        <Button onAction="#pushLabel" mnemonicParsing="false" prefHeight="26.0"
                                                                prefWidth="41.0" text="添加">
                                                            <HBox.margin>
                                                                <Insets top="5.0"/>
                                                            </HBox.margin>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                                <HBox fx:id="contentTagBox" prefHeight="23.0" prefWidth="229.0">
                                                    <children>
                                                        <Label prefHeight="38.0" prefWidth="51.0" text="标签："/>
                                                        <Button mnemonicParsing="false" prefHeight="26.0"
                                                                prefWidth="41.0" text="添加">
                                                            <HBox.margin>
                                                                <Insets/>
                                                            </HBox.margin>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                                <HBox fx:id="contributorBox" prefHeight="37.0" prefWidth="300.0">
                                                    <children>
                                                        <Label prefHeight="38.0" prefWidth="51.0" text="贡献者："/>
                                                        <Button mnemonicParsing="false" prefHeight="26.0"
                                                                prefWidth="41.0" text="添加">
                                                            <HBox.margin>
                                                                <Insets top="5.0"/>
                                                            </HBox.margin>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                                <GridPane prefHeight="52.0" prefWidth="247.0">
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES"
                                                                           maxWidth="108.33331298828125" minWidth="10.0"
                                                                           prefWidth="66.66669082641602"/>
                                                        <ColumnConstraints hgrow="SOMETIMES"
                                                                           maxWidth="179.99997584025064" minWidth="10.0"
                                                                           prefWidth="179.99997584025064"/>
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                                        vgrow="SOMETIMES"/>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                                        vgrow="SOMETIMES"/>
                                                    </rowConstraints>
                                                    <children>
                                                        <Label text="发布时间：" GridPane.rowIndex="1"/>
                                                        <Label text="创建时间："/>
                                                        <DateTimePicker fx:id="createTimePK" minHeight="-Infinity"
                                                                        minWidth="-Infinity" prefHeight="26.0"
                                                                        prefWidth="145.0" GridPane.columnIndex="1"/>
                                                        <DateTimePicker fx:id="publishTimePK" minHeight="-Infinity"
                                                                        minWidth="-Infinity" prefHeight="26.0"
                                                                        prefWidth="145.0" GridPane.columnIndex="1"
                                                                        GridPane.rowIndex="1"/>
                                                    </children>
                                                </GridPane>
                                                <FlowPane prefHeight="53.0" prefWidth="444.0">
                                                    <children>
                                                        <RadioButton fx:id="isCommentRBtn" mnemonicParsing="false"
                                                                     text="是否可以评论"/>
                                                        <RadioButton fx:id="isLikeRBtn" mnemonicParsing="false"
                                                                     text="是否可以点赞"/>
                                                        <RadioButton fx:id="isAdmireRBtn" mnemonicParsing="false"
                                                                     text="是否可以赞赏"/>
                                                    </children>
                                                </FlowPane>
                                                <HBox prefHeight="25.0" prefWidth="369.0" VBox.vgrow="ALWAYS">
                                                    <children>
                                                        <Button fx:id="saveBtn" mnemonicParsing="false"
                                                                onAction="#toSave" text="保存为初稿"/>
                                                        <Button fx:id="publishBtn" mnemonicParsing="false"
                                                                onAction="#toSave" text="发布">
                                                            <HBox.margin>
                                                                <Insets/>
                                                            </HBox.margin>
                                                        </Button>
                                                    </children>
                                                    <VBox.margin>
                                                        <Insets right="5.0"/>
                                                    </VBox.margin>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </StackPane>
                            </items>
                        </SplitPane>
                    </children>
                </AnchorPane>
            </items>
            <cursor>
                <Cursor fx:constant="DEFAULT"/>
            </cursor>
        </SplitPane>
    </children>
</AnchorPane>
